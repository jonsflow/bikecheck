<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/ad_container_background"
    android:padding="16dp">

    <!-- Ad Label -->
    <TextView
        android:id="@+id/textViewAdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADVERTISEMENT"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="@color/secondary_text"
        android:letterSpacing="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Info Icon -->
    <TextView
        android:id="@+id/textViewInfoIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â“˜"
        android:textSize="12sp"
        android:textColor="@color/secondary_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Ad Title -->
    <TextView
        android:id="@+id/textViewAdTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Your Ad Here"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/secondary_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAdLabel" />

    <!-- Ad Description -->
    <TextView
        android:id="@+id/textViewAdDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="2"
        android:text="Promote your cycling business or product"
        android:textSize="12sp"
        android:textColor="@color/secondary_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAdTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>